# convert a ledger-cli pricedb file to beancount format

use strict;
use warnings;

while (my $l = <>) {
    chomp $l;

    if ($l =~ /^P\s+(\S+)\s+(\S+)\s+(\S+)\s+(\S+)$/) {
	print "$1 price $2 $3 $4\n";
    } else {
	print "$l\n";
    }
}
